{
  "emulators": {
    "firestore": { "host": "127.0.0.1", "port": 8088 },
    "auth": { "host": "127.0.0.1", "port": 9099 },
    "ui": { "host": "127.0.0.1", "port": 4002 },
    "singleProjectMode": true,
    "import": ".emulator-data",
    "exportOnExit": ".emulator-data"
  },

  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}

